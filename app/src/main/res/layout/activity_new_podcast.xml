<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.karti.podcastcentral.NewPodcast">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/etWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignLeft="@+id/tvError"
            android:layout_alignStart="@+id/tvError"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="http://" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="Website"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_below="@+id/etRSS"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6" />

        <TextView
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bBack"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:text="Feed Error?"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="18sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etRSS"
            android:layout_alignBottom="@+id/etRSS"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:text="RSS: Feed"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <EditText
            android:id="@+id/etRSS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etAuthor"
            android:layout_alignStart="@+id/etAuthor"
            android:layout_below="@+id/etAuthor"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="http://rss." />

        <EditText
            android:id="@+id/etAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etName"
            android:layout_alignStart="@+id/etName"
            android:layout_below="@+id/etName"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Author" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="114dp"
            android:layout_below="@+id/TextViewblah"
            android:layout_alignLeft="@+id/bNewPodcast"
            android:layout_alignStart="@+id/bNewPodcast"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/etName"
            android:layout_marginTop="13dp"
            android:text="Author: "
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etName"
            android:layout_alignBottom="@+id/etName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:text="Feed Name:"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <Button
            android:id="@+id/bBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goBack"
            android:text="Back"
            android:layout_alignBaseline="@+id/bNewPodcast"
            android:layout_alignBottom="@+id/bNewPodcast"
            android:layout_alignRight="@+id/etRSS"
            android:layout_alignEnd="@+id/etRSS" />

        <Button
            android:id="@+id/bNewPodcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addPodcast"
            android:text="Add Podcast"
            android:layout_below="@+id/etRSS"
            android:layout_alignRight="@+id/tvError"
            android:layout_alignEnd="@+id/tvError"
            android:layout_marginTop="70dp" />

        <TextView
            android:id="@+id/TextViewblah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Add Podcast"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
